
<div class="row resultcontainer middle-xs">
{% for result in mp |sort(attribute='name', reverse=false) %}
{% if result.visible === true %}
<div class="result col-xs-12 col-sm-6 col-md-4 col-lg-3 hvr-bob">
    <div class="result__name">
        {{result.name}}
    </div>
    


<a href="https://my.matterport.com/show/?m={{result.id}}&help=0&hl=0&qs=1&brand=0&dh=1&gt=0&hr=0&mls=2&mt=0&pin=0&play=1" target="_blank" rel="noopener" title="{{result.id}}">
<img src="https://my.matterport.com/api/v2/player/models/{{result.id}}/thumb/" width="100%" height="auto">
</a>

{# --- show streetview where applicable --- #}

{% for s in streetview %}
{% if s.id === result.id %}

<div class="streetview-icon" onClick="var element = document.getElementById('i_{{result.id}}');element.classList.toggle('hidden');return false">
    <img src="/img/streetview-icon.png" style="z-index:999999999;position:absolute;bottom: 10px; left: 10px; height:20px;width: auto">
</div>

<iframe id="i_{{result.id}}" width="100%" height="100%" style="" class="hidden" loading="lazy" allowfullscreen
src="https://www.google.com/maps/embed/v1/streetview?key=AIzaSyCC26sOubfQQiXxr23z6PUWxesf63gmUys&heading={{s.heading}}&pano={{s.pano}}"></iframe>

{% endif %}
{% endfor %}

{# --- show tags --- #}
{% for tag in result.tags %}
<span class="result__tag">{{ tag }}</span>
{% endfor %}

</div>


{% endif %}
{% endfor %}

{# --- Show source of tour (matterport / youtube etc) --- #}
